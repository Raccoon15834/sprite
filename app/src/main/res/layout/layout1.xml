<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="@dimen/largeLen"
        android:layout_height="@dimen/largeLen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/pinkPurple"
        android:text="@string/greeting1"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="@dimen/largeLen"
        android:layout_height="@dimen/largeLen"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/navy"
        android:text="@string/greeting2"
        android:textColor="@color/white"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="@dimen/largeLen"
        android:layout_height="@dimen/largeLen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/peach"
        android:text="@string/greeting3"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="@dimen/largeLen"
        android:layout_height="@dimen/largeLen"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/greyGreen"
        android:text="@string/greeting4" />

</androidx.constraintlayout.widget.ConstraintLayout>